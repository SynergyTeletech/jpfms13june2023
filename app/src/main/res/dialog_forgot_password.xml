<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/c_dark_blue"
        android:gravity="center"
        android:fontFamily="@font/opensans_regular"
        android:padding="@dimen/dp_8"
        android:text="@string/send_otp_to_above_number"
        android:textColor="@color/c_white"
        android:textSize="@dimen/sp_16" />

    <LinearLayout
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

        <TextView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_regular"
            android:text="@string/mobile_number"
            android:textColor="@color/c_dark_blue" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_mobile_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:fontFamily="@font/opensans_regular"
            android:hint=""
            android:textSize="@dimen/sp_18" />

     <!--   <EditText
            android:id="@+id/et_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:hint="OTP"
            android:inputType="number" />-->
        <LinearLayout
            android:id="@+id/otpView"

            android:gravity="center"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_first"
                android:layout_width="@dimen/dp_35"
                android:layout_height="wrap_content"

                android:inputType="number"
                android:gravity="center"
                android:maxLength="1"

                android:padding="@dimen/dp_5"
                android:background="@drawable/square"
                android:focusable="true"
                android:nextFocusForward="@id/et_second"
                android:text=""
                android:textColor="@color/c_green" />

            <EditText
                android:layout_marginLeft="@dimen/dp_2"
                android:id="@+id/et_second"
                android:layout_width="@dimen/dp_35"
                android:layout_height="wrap_content"

                android:inputType="number"
                android:gravity="center"
                android:background="@drawable/square"
                android:maxLength="1"
                android:padding="@dimen/dp_5"
                android:nextFocusForward="@id/et_third"
                android:text=""
                android:textColor="@color/c_green" />

            <EditText
                android:layout_marginLeft="@dimen/dp_2"
                android:id="@+id/et_third"
                android:layout_width="@dimen/dp_35"
                android:layout_height="wrap_content"

                android:background="@drawable/square"
                android:inputType="number"
                android:gravity="center"
                android:maxLength="1"
                android:padding="@dimen/dp_5"
                android:text=""
                android:textColor="@color/c_green" />


            <EditText

                android:layout_marginLeft="@dimen/dp_2"
                android:id="@+id/et_fourth"
                android:layout_width="@dimen/dp_35"
                android:layout_height="wrap_content"
                android:background="@drawable/square"
                android:inputType="number"
                android:gravity="center"
                android:maxLength="1"
                android:padding="@dimen/dp_5"
                android:text=""
                android:textColor="@color/c_green" />

            <EditText
                android:layout_marginLeft="@dimen/dp_2"
                android:id="@+id/et_five"
                android:layout_width="@dimen/dp_35"
                android:layout_height="wrap_content"
                android:background="@drawable/square"
                android:inputType="number"
                android:maxLength="1"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:text=""
                android:textColor="@color/c_green" />

            <EditText
                android:layout_marginLeft="@dimen/dp_2"
                android:id="@+id/et_sixth"
                android:layout_width="@dimen/dp_35"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:background="@drawable/square"
                android:inputType="number"
                android:maxLength="1"
                android:padding="@dimen/dp_5"
                android:text=""
                android:textColor="@color/c_green" />

        </LinearLayout>




        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:fontFamily="@font/opensans_regular"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:hint="Password"
            android:inputType="textPassword"
            android:visibility="gone" />

        <EditText
            android:id="@+id/et_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:fontFamily="@font/opensans_regular"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_resendotp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:gravity="center"
            android:padding="@dimen/dp_2"
            android:text="@string/resend_otp"
            android:textColor="@color/c_dark_blue"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btn_reset_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:fontFamily="@font/opensans_regular"
            android:layout_margin="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/d_button_green"
            android:text="@string/submit"
            android:textAllCaps="false"
            android:textColor="@color/c_white"
            android:textSize="@dimen/sp_15" />

    </LinearLayout>
</LinearLayout>