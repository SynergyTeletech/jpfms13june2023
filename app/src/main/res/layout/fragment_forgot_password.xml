<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:weightSum="2"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1.8"
            android:orientation="vertical">

            <com.syneygy.fillnow.Jpfmsdutymanager.fillnowdutymanager1.utils.AspectRatioImageView
                android:layout_width="@dimen/dp_100"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_35"
                android:background="@drawable/jpfms"
                tools:ignore="MissingClass" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center_horizontal"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lbl_punch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                  android:fontFamily="@font/cutoutsflf"
                    android:gravity="center"
                    android:padding="@dimen/dp_0"
                    android:text="@string/fuel_delivered"
                    android:textAllCaps="true"
                    android:textColor="#580a31"
                    android:textSize="21sp"
                    android:textStyle="" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:layout_marginTop="@dimen/dp_10"
                    android:fontFamily="@font/cutoutsflf"
                    android:gravity="center"
                    android:padding="@dimen/dp_0"
                    android:text="@string/anywhere"
                    android:textAllCaps="true"
                    android:textColor="#580a31"
                    android:textSize="21sp"
                    android:textStyle="" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center"
                android:text="@string/forgot_your_password"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_20" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_30"
                android:gravity="center"
                android:text="@string/forgot_password_description"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_mobile_no"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_30"
                android:background="@drawable/d_dark_blue"
                android:drawableLeft="@drawable/ic_mobile_phone"
                android:drawablePadding="60dp"
                android:hint="@string/mobile_number"
                android:inputType="phone"
                android:maxLines="1"
                android:text="@={forgotpassword.mobile}"
                android:paddingLeft="@dimen/dp_10"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textColorHint="@color/hintblue"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_reset_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_15"
                android:background="#580a31"
                android:text="@string/reset_my_password"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize= "16sp" />
            <ImageView
                android:layout_marginTop="@dimen/dp_5"
                android:layout_width="match_parent"
                android:src="@drawable/fillnow_forgot"
                android:layout_height="wrap_content" />


        </LinearLayout>


        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight=".2"
            android:background="@color/c_footer" />
    </LinearLayout>




