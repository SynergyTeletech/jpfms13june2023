<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_5"
    android:background="@drawable/border"
    android:orientation="vertical"
    android:padding="@dimen/dp_1">

    <TextView
        android:id="@+id/assetNumber"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/md_blue_50"
        android:gravity="center"
        android:text="Asset 1"
        android:textColor="@color/black" />


    <ImageView
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:padding="3dp"
        android:src="@mipmap/petrol" />

    <com.syneygy.fillnow.Jpfmsdutymanager.fillnowdutymanager1.custom.fonts.LatoSemiBoldTextView
        android:id="@+id/assetName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center"
        android:textSize="@dimen/sp_12"
        android:text="Name" />
    <com.syneygy.fillnow.Jpfmsdutymanager.fillnowdutymanager1.custom.fonts.LatoSemiBoldTextView
        android:id="@+id/assetLockId"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="Lock Id" />
    <TextView
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="@dimen/dp_4"
        android:background="@color/color_blue"
        android:gravity="center"
        android:text="Select"
        android:textAllCaps="true"
        android:textColor="@color/white" />
</LinearLayout>