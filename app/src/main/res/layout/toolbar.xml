<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_55"
    android:background="@drawable/bgtoolbar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_backpressed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@color/black" />


        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="@dimen/dp_150"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dp_6"
            android:background="@drawable/jpfms"
            android:paddingLeft="@dimen/dp_15"
            android:paddingTop="@dimen/dp_4"
            android:paddingRight="@dimen/dp_20" />
<SearchView
    android:layout_width="400dp"
    android:layout_height="match_parent"
    android:id="@+id/searchViewToolbar"
    app:queryBackground="@color/white"
    android:visibility="gone"
    android:layout_toRightOf="@id/iv_backpressed"/>
        <TextView
            android:id="@+id/tv_fragment_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_toLeftOf="@+id/iv_logo"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/searchViewToolbar"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="fasfas"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_20"
            android:visibility="gone" />
    </RelativeLayout>

</androidx.appcompat.widget.Toolbar>
