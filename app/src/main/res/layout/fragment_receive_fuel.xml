<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/md_grey_200"
        android:baselineAligned="false"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_5"
            android:layout_weight="1"
            android:background="@drawable/border">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/txtDispenseStatusLay"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <LinearLayout
                                android:id="@+id/txtOtherDetailsLay"
                                android:layout_width="250dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/dispensingLay"
                                android:layout_marginTop="@dimen/dp_5"
                                android:background="@drawable/border"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <com.syneygy.fillnow.Jpfmsdutymanager.fillnowdutymanager1.custom.fonts.LatoRegularTextView
                                    style="@style/Base.TextAppearance.AppCompat.Subhead"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="5dp"
                                    android:gravity="center"
                                    android:text="Location ID" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/md_blue_grey_200" />

                                <com.syneygy.fillnow.Jpfmsdutymanager.fillnowdutymanager1.custom.fonts.LatoRegularTextView
                                    style="@style/Base.TextAppearance.AppCompat.Subhead"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="5dp"
                                    android:gravity="center"
                                    android:text="Compartment" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/md_blue_grey_200" />

                                <com.syneygy.fillnow.Jpfmsdutymanager.fillnowdutymanager1.custom.fonts.LatoRegularTextView
                                    style="@style/Base.TextAppearance.AppCompat.Subhead"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="5dp"
                                    android:gravity="center"
                                    android:text="Volume Refueling(Lts)" />


                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/md_blue_grey_200" />

                                <com.syneygy.fillnow.Jpfmsdutymanager.fillnowdutymanager1.custom.fonts.LatoRegularTextView
                                    style="@style/Base.TextAppearance.AppCompat.Subhead"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="5dp"
                                    android:gravity="center"
                                    android:text="Compartment Volume (Lts)" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/readingsLay"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/dispensingLay"
                                android:layout_marginTop="@dimen/dp_5"
                                android:layout_toRightOf="@+id/txtOtherDetailsLay"
                                android:background="@drawable/border"
                                android:orientation="vertical">

                                <com.syneygy.fillnow.Jpfmsdutymanager.fillnowdutymanager1.custom.fonts.LatoRegularTextView
                                    android:id="@+id/tvDispenserLocationId"
                                    style="@style/Base.TextAppearance.AppCompat.Subhead"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="5dp"
                                    android:gravity="center"
                                    android:text="" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/md_blue_grey_200" />

                                <com.syneygy.fillnow.Jpfmsdutymanager.fillnowdutymanager1.custom.fonts.LatoRegularTextView
                                    android:id="@+id/tvDispenserCompartmentId"
                                    style="@style/Base.TextAppearance.AppCompat.Subhead"
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:gravity="center"
                                    android:text="Selected Compartment"
                                    android:textColor="@color/black" />

                                <com.syneygy.fillnow.Jpfmsdutymanager.fillnowdutymanager1.custom.fonts.LatoRegularTextView
                                    android:id="@+id/tvDispenserSelectCompartment"
                                    style="@style/Base.TextAppearance.AppCompat.Subhead"
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:layout_marginTop="5dp"
                                    android:gravity="center"
                                    android:text="Select Other Compartment"
                                    android:textAllCaps="true"
                                    android:textColor="@color/c_dark_blue" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/md_blue_grey_200" />

                                <com.syneygy.fillnow.Jpfmsdutymanager.fillnowdutymanager1.custom.fonts.LatoRegularTextView
                                    android:id="@+id/tvDispenserVolumeRefueling"
                                    style="@style/Base.TextAppearance.AppCompat.Subhead"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="5dp"
                                    android:gravity="center"
                                    android:text="" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/md_blue_grey_200" />

                                <com.syneygy.fillnow.Jpfmsdutymanager.fillnowdutymanager1.custom.fonts.LatoRegularTextView
                                    android:id="@+id/tvVolumeCompartment"
                                    style="@style/Base.TextAppearance.AppCompat.Subhead"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="5dp"
                                    android:gravity="center"
                                    android:text="" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/wifiSettingLay"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_above="@+id/startTankCalibrationLay"
                                android:layout_below="@+id/readingsLay"
                                android:layout_margin="@dimen/dp_5"
                                android:background="@drawable/border"
                                android:orientation="vertical">

                                <com.syneygy.fillnow.Jpfmsdutymanager.fillnowdutymanager1.custom.fonts.LatoRegularTextView
                                    android:id="@+id/connectionStatus"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:paddingStart="@dimen/dp_5"
                                    android:text="Wifi Connection Status"
                                    android:textColor="@color/black"
                                    android:textSize="12sp" />

                                <com.syneygy.fillnow.Jpfmsdutymanager.fillnowdutymanager1.custom.fonts.LatoSemiBoldTextView
                                    android:id="@+id/pumpStatus"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="5dp"
                                    android:gravity="center"
                                    android:paddingStart="@dimen/dp_5"
                                    android:textAllCaps="true"
                                    android:textColor="@color/white"
                                    android:textSize="12sp" />

                                <com.syneygy.fillnow.Jpfmsdutymanager.fillnowdutymanager1.custom.fonts.LatoSemiBoldTextView
                                    android:id="@+id/tvReconnect"
                                    style="@style/Base.TextAppearance.AppCompat.Small"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/border_sky"
                                    android:gravity="center"
                                    android:paddingStart="@dimen/dp_5"
                                    android:paddingLeft="@dimen/dp_5"
                                    android:paddingRight="@dimen/dp_5"
                                    android:text="Reconnect"
                                    android:textAllCaps="true"
                                    android:textColor="@color/white" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:textColor="@color/black"
                                    android:id="@+id/timerText"
                                    android:layout_marginRight="@dimen/dp_15"
                                    android:textAlignment="viewEnd"
                                    android:textSize="15sp"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="Tank 1 Available Balance"
                                    android:textColor="@color/black"
                                    android:textAlignment="center"
                                    android:textSize="14sp"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:id="@+id/tank1Balance"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"

                                    android:textAlignment="center"
                                    android:text="Tank 2 Available Balance"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:textAlignment="center"
                                    android:id="@+id/tank2Balance"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/startTankCalibrationLay"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_alignParentBottom="true"
                                android:layout_marginTop="@dimen/dp_20"
                                android:orientation="horizontal">


                                <androidx.cardview.widget.CardView
                                    android:id="@+id/orderCompletedLay"
                                    android:layout_width="0dp"
                                    android:layout_height="70dp"
                                    android:layout_margin="@dimen/dp_5"
                                    android:layout_weight="1"
                                    android:visibility="gone"
                                    app:cardBackgroundColor="@color/md_blue_400"
                                    app:cardCornerRadius="@dimen/dp_4">

                                    <com.syneygy.fillnow.Jpfmsdutymanager.fillnowdutymanager1.custom.fonts.LatoRegularTextView
                                        android:id="@+id/orderCompleted"
                                        style="@style/Base.TextAppearance.AppCompat.Subhead"
                                        android:layout_width="match_parent"
                                        android:layout_height="70dp"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:padding="5dp"
                                        android:text="Complete"
                                        android:textColor="@color/white" />
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/startTankCalibration"
                                    android:layout_width="0dp"
                                    android:layout_height="70dp"
                                    android:layout_margin="@dimen/dp_5"
                                    android:layout_weight="1"
                                    app:cardBackgroundColor="@color/green"
                                    app:cardCornerRadius="@dimen/dp_4">

                                    <com.syneygy.fillnow.Jpfmsdutymanager.fillnowdutymanager1.custom.fonts.LatoRegularTextView
                                        android:id="@+id/tvStartReceiving"
                                        style="@style/Base.TextAppearance.AppCompat.Subhead"
                                        android:layout_width="match_parent"
                                        android:layout_height="70dp"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:padding="5dp"
                                        android:text="Start Receiving "
                                        android:textColor="@color/white" />
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>
                        </RelativeLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/txtDispenseStatusLay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white">

                        <com.syneygy.fillnow.Jpfmsdutymanager.fillnowdutymanager1.custom.fonts.LatoRegularTextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_toLeftOf="@+id/fuelingMode"
                            android:background="@color/md_blue_400"
                            android:gravity="center"
                            android:padding="@dimen/dp_5"
                            android:paddingLeft="20dp"
                            android:text="Receive"
                            android:textAllCaps="true"
                            android:textColor="@color/white" />

                        <com.syneygy.fillnow.Jpfmsdutymanager.fillnowdutymanager1.custom.fonts.LatoRegularTextView
                            android:id="@+id/fuelingMode"
                            android:layout_width="@dimen/dp_200"
                            android:layout_height="30dp"
                            android:layout_alignParentEnd="true"
                            android:background="@color/green"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="ONLINE"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                    </RelativeLayout>
                </RelativeLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_4"
            android:layout_weight=".4"
            app:cardElevation="4dp">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:background="#FFFF00">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:gravity="center"
                            android:text="Total Balance Available "
                            android:textColor="@color/black" />
                        <TextView
                            android:id="@+id/tv_total_available_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:gravity="center"
                            android:text="0.00"
                            android:textColor="@color/black" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:gravity="center"
                            android:text=" Lts"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:padding="@dimen/dp_10"
                        android:background="@color/white"
                        android:gravity="center_horizontal">
                        <com.syneygy.fillnow.Jpfmsdutymanager.fillnowdutymanager1.custom.WaveLoadingView
                            android:id="@+id/waveLoadingViewTank1"
                            android:layout_width="125dp"
                            android:layout_height="80dp"
                            android:layout_alignParentLeft="true"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/dp_25"
                            android:layout_marginRight="@dimen/dp_5"
                            app:wlv_borderColor="@color/md_grey_500"
                            app:wlv_borderWidth="2dp"
                            app:wlv_progressValue="10"
                            app:wlv_round_rectangle="true"
                            app:wlv_shapeType="circle"
                            app:wlv_titleCenter="0.00"
                            app:wlv_titleCenterColor="@color/black"
                            app:wlv_titleCenterSize="14sp"
                            app:wlv_triangle_direction="north"
                            app:wlv_waveAmplitude="40"
                            app:wlv_waveColor="@color/md_blue_200" />
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:background="@color/md_grey_400" />
                        <com.syneygy.fillnow.Jpfmsdutymanager.fillnowdutymanager1.custom.WaveLoadingView
                            android:id="@+id/waveLoadingViewTank2"
                            android:layout_width="125dp"
                            android:layout_height="80dp"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginRight="@dimen/dp_25"
                            app:wlv_borderColor="@color/md_grey_500"
                            app:wlv_borderWidth="2dp"
                            app:wlv_progressValue="10"
                            app:wlv_round_rectangle="true"
                            app:wlv_shapeType="circle"
                            app:wlv_titleCenter="0.00"
                            app:wlv_titleCenterColor="@color/black"
                            app:wlv_titleCenterSize="14sp"
                            app:wlv_triangle_direction="north"
                            app:wlv_waveAmplitude="40"
                            app:wlv_waveColor="@color/md_blue_200" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center_horizontal">

                        <TextView
                            android:id="@+id/tv_tank1"
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:background="@color/md_yellow_700"
                            android:gravity="center"
                            android:text="Compartment 1"
                            android:textColor="@color/white" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/md_grey_400" />

                        <TextView
                            android:id="@+id/tv_tank2"
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:background="@color/md_yellow_700"
                            android:gravity="center"
                            android:text="Compartment 2"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_bypass_atg"
                        style="@style/Base.TextAppearance.AppCompat.Subhead"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="@dimen/dp_2"
                        android:layout_marginBottom="@dimen/dp_2"
                        android:background="@drawable/border_sky"
                        android:gravity="center"
                        android:text="Bypass ATG"
                        android:textAllCaps="true"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:background="#FFFF00"
                        android:gravity="center"
                        android:text="Manhole Lock Status"

                        android:textColor="@color/black" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:padding="5dp"
                        android:background="@color/white"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="125dp"
                            android:layout_height="60dp"
                            android:layout_alignParentLeft="true"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/main_hole" />

                        <com.syneygy.fillnow.Jpfmsdutymanager.fillnowdutymanager1.custom.fonts.LatoBoldTextView
                            android:id="@+id/tv_manhole_1_lock_status"
                            android:layout_width="105dp"
                            android:layout_height="40dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="@dimen/dp_13"
                            android:gravity="center"
                            android:text="Locked"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textSize="11sp" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:background="@color/md_grey_400" />

                        <ImageView
                            android:layout_width="125dp"
                            android:layout_height="60dp"
                            android:layout_alignParentRight="true"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/main_hole" />

                        <com.syneygy.fillnow.Jpfmsdutymanager.fillnowdutymanager1.custom.fonts.LatoBoldTextView
                            android:id="@+id/tv_manhole_2_lock_status"
                            android:layout_width="105dp"
                            android:layout_height="40dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginRight="@dimen/dp_6"
                            android:gravity="center"
                            android:text="Locked"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textSize="11sp" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center_horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:background="@color/colorGreeen"
                            android:gravity="center"
                            android:text="Manhole 1"
                            android:textColor="@color/white" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/md_grey_400" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:background="@color/colorGreeen"
                            android:gravity="center"
                            android:text="Manhole 2"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:background="#FFFF00"
                        android:gravity="center"
                        android:text="Solenoid Valve Status"
                        android:textColor="@color/black"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        android:gravity="center_horizontal"
                        android:visibility="gone">
                        <ImageView
                            android:layout_width="125dp"
                            android:layout_height="50dp"
                            android:scaleType="centerInside"
                            android:src="@mipmap/valve" />
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:background="@color/md_grey_400" />
                        <ImageView
                            android:layout_width="125dp"
                            android:layout_height="50dp"
                            android:layout_alignParentRight="true"
                            android:scaleType="centerInside"
                            android:src="@mipmap/valve" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center_horizontal"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:background="@color/colorGreeen"
                            android:gravity="center"
                            android:text="Valve 1 : Open"
                            android:textColor="@color/white" />
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/md_grey_400" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:background="@color/md_red_300"
                            android:gravity="center"
                            android:text="Valve 2 : Close"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <TextView
                        style="@style/Base.TextAppearance.AppCompat.Subhead"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="@dimen/dp_2"
                        android:layout_marginBottom="@dimen/dp_2"
                        android:background="@drawable/border_sky"
                        android:gravity="center"
                        android:text="Open both valves"
                        android:textColor="@color/white"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:background="#FFFF00"
                        android:gravity="center"
                        android:text="GPS Status"
                        android:textColor="@color/black" />

                    <LinearLayout
                        android:id="@+id/connectionStatusLay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_latitude"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:background="@color/md_orange_400"
                            android:ellipsize="marquee"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:singleLine="true"
                            android:text="Lat :"
                            android:textColor="@color/black" />
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:background="@color/md_grey_400" />
                        <TextView
                            android:id="@+id/tv_longitude"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:background="@color/md_orange_400"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:text="Long :"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_bypass_gps"
                        style="@style/Base.TextAppearance.AppCompat.Subhead"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="@dimen/dp_2"
                        android:layout_marginBottom="@dimen/dp_2"
                        android:background="@drawable/border_sky"
                        android:gravity="center"
                        android:text="Bypass GPS"
                        android:textAllCaps="true"
                        android:textColor="@color/white" />
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

