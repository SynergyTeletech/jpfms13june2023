    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_regular_dispense_form"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:padding="15dp"
                android:visibility="gone">
                <EditText
                    android:id="@+id/et_location_id"
                    style="@style/edit_text_input"
                    android:hint="Enter Location ID"
                    android:inputType="number"/>
                <EditText
                    android:id="@+id/et_preset_quantity"
                    style="@style/edit_text_input"
                    android:hint="Preset Quantity"
                    android:inputType="numberDecimal"/>
                <EditText
                    android:id="@+id/et_terminal_id"
                    style="@style/edit_text_input"
                    android:hint="Terminal Id"
                    android:inputType="numberDecimal"/>
                <TextView
                    android:id="@+id/tv_submitl"
                    android:layout_width="400dp"
                    android:layout_height="44dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:background="@color/color_blue"
                    android:gravity="center"
                    android:text="Submit "

                    android:textAllCaps="true"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_golocal_dispense_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:padding="15dp"
                android:visibility="visible">

                <EditText
                    android:id="@+id/tv_location_id"
                    style="@style/edit_text_input"
                    android:hint="Location Id*"
                    android:digits="1234567890."
                    android:inputType="phone"/>

                <EditText
                    android:id="@+id/tv_fueling_start_time"
                    style="@style/edit_text_input"
                    android:hint="Enter Fuel Start Time" />

                <EditText
                    android:id="@+id/tv_fueling_stop_time"
                    style="@style/edit_text_input"
                    android:hint="Enter Fuel Stop Time*" />

                <EditText
                    android:id="@+id/tv_dispense_qty"
                    style="@style/edit_text_input"
                    android:hint="Enter Dispense Quantity*"
                    android:digits="1234567890."
                    android:inputType="phone"/>

                <EditText
                    android:id="@+id/tv_unit_price"
                    style="@style/edit_text_input"
                    android:hint="Enter Price (per litre)*"
                    android:digits="1234567890."
                    android:inputType="phone"/>

                <EditText
                    android:id="@+id/tv_gst_percentage"
                    style="@style/edit_text_input"
                    android:hint="GST (%)*"
                    android:digits="1234567890."
                    android:inputType="phone"/>

                <EditText
                    android:id="@+id/tv_total_amount"
                    style="@style/edit_text_input"
                    android:hint="Total Amount*"
                    android:digits=""
                    android:enabled="false"
                    android:inputType="phone"/>

                <EditText
                    android:id="@+id/tv_asset_id"
                    style="@style/edit_text_input"
                    android:hint="Asset Id*" />

                <EditText
                    android:id="@+id/tv_meter_reading"
                    style="@style/edit_text_input"
                    android:hint="Enter Meter Reading*"
                    android:digits="1234567890."
                    android:inputType="phone"/>

                <EditText
                    android:id="@+id/tv_asset_other_reading"
                    style="@style/edit_text_input"
                    android:hint="Enter Asset Other Reading*"
                    android:digits="1234567890."
                    android:inputType="phone"/>

                <EditText
                    android:id="@+id/tv_asset_other_reading_2"
                    style="@style/edit_text_input"
                    android:hint="Enter Asset Other Reading 2*"
                    android:digits="1234567890."
                    android:inputType="phone"/>

                <EditText
                    android:id="@+id/tv_batch_no"
                    style="@style/edit_text_input"
                    android:hint="Enter Batch No" />

                <EditText
                    android:id="@+id/tv_atg_tank_start_reading"
                    style="@style/edit_text_input"
                    android:hint="Enter ATG Tank Start Reading "
                    android:digits="1234567890."
                    android:inputType="phone"/>

                <EditText
                    android:id="@+id/tv_atg_tank_end_reading"
                    style="@style/edit_text_input"
                    android:hint="Enter ATG Tank End Reading "
                    android:digits="1234567890."
                    android:inputType="phone"/>

                <EditText
                    android:id="@+id/tv_volume_totalizer"
                    style="@style/edit_text_input"
                    android:hint="Enter Reading of Volume Totalizers"
                    android:digits="1234567890."
                    android:inputType="phone"/>

                <EditText
                    android:id="@+id/tv_no_of_event_start_stop"
                    style="@style/edit_text_input"
                    android:hint="Enter No. of Resume Operations"
                    android:digits="1234567890."
                    android:inputType="phone"/>

                <EditText
                    android:id="@+id/tv_latitude"
                    style="@style/edit_text_input"
                    android:hint="Enter Latitude"
                    android:digits="1234567890."
                    android:inputType="phone"/>

                <EditText
                    android:id="@+id/tv_longitude"
                    style="@style/edit_text_input"
                    android:hint="Enter Longitude"
                    android:digits="1234567890."
                    android:inputType="phone"/>

                <EditText
                    android:id="@+id/tv_location_reading_1"
                    style="@style/edit_text_input"
                    android:hint="Enter Location Reading 1"
                    android:digits="1234567890."
                    android:inputType="phone"/>

                <EditText
                    android:id="@+id/tv_location_reading_2"
                    style="@style/edit_text_input"
                    android:hint="Enter Location Reading 2"
                    android:digits="1234567890."
                    android:inputType="phone"/>

                <TextView
                    android:id="@+id/tv_submit"
                    android:layout_width="400dp"
                    android:layout_height="44dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:background="@color/color_blue"
                    android:gravity="center"
                    android:text="Submit "

                    android:textAllCaps="true"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/lay_fresh_dispense_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"

        android:layout_alignParentBottom="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        android:padding="15dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_regular_dispense"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_weight="1"
            android:background="@color/color_blue"
            android:gravity="center"
            android:text="Create Order"
            android:textAllCaps="true"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_go_local_dispense"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_weight="1"
            android:background="@color/color_blue"
            android:gravity="center"
            android:text="Go Local"
            android:textAllCaps="true"
            android:textColor="@color/white" />

        <com.syneygy.fillnow.Jpfmsdutymanager.fillnowdutymanager1.custom.fonts.LatoSemiBoldTextView
            android:id="@+id/tv_localdb_order"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_weight="1"
            android:background="@color/md_teal_300"
            android:gravity="center"

            android:paddingStart="@dimen/dp_5"
            android:text="Show Stored Order"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="gone"/>

    </LinearLayout>







</RelativeLayout>