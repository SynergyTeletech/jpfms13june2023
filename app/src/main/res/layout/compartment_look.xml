<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_5"
    android:background="@drawable/border"
    android:orientation="vertical"
    android:padding="@dimen/dp_1">

    <TextView
        android:id="@+id/compartmentNumber"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/md_blue_50"
        android:gravity="center"
        android:text="Compartment 1"
        android:textAllCaps="true"
        android:textColor="@color/black" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:padding="@dimen/dp_5"
        android:src="@mipmap/recieve_fuel_pic" />

    <com.syneygy.fillnow.Jpfmsdutymanager.fillnowdutymanager1.custom.fonts.LatoSemiBoldTextView
        android:id="@+id/compartmentName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Name" />

    <TextView
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="@dimen/dp_4"
        android:background="@color/color_blue"
        android:gravity="center"
        android:text="Select"
        android:textAllCaps="true"
        android:textColor="@color/white" />
</LinearLayout>