<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/profilebg"
    tools:context="com.syneygy.fillnow.Jpfmsdutymanager.fillnowdutymanager1.fragments.FragmentViewProfile">

    <!-- TODO: Update View profile fragment layout -->

    <RelativeLayout
        android:layout_weight=".5"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_150"
            android:layout_centerInParent="true"
            android:src="@drawable/profile_bg"
            app:civ_border_width="2dp"
            app:civ_border_color="#00FFFFFF"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_25"
        android:orientation="vertical"
        android:layout_weight=".5"
        android:layout_width="0dp"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_height="match_parent">

       <LinearLayout
           android:layout_marginBottom="@dimen/dp_5"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <ImageView
               android:paddingLeft="@dimen/dp_8"
               android:src="@drawable/company_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_CompanyName"
                android:paddingLeft="@dimen/dp_34"
                android:textSize="@dimen/sp_17"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:hint="Company Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
       </LinearLayout>
        <TextView
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_50"
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <LinearLayout
            android:layout_marginBottom="@dimen/dp_5"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/user_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_Name"
                android:paddingLeft="@dimen/dp_30"
                android:textSize="@dimen/sp_17"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:hint="Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_50"
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <LinearLayout
            android:layout_marginBottom="@dimen/dp_5"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/address_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_Address"
                android:paddingLeft="@dimen/dp_30"
                android:textSize="@dimen/sp_17"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:hint="Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_50"
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <LinearLayout
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_Email"
                android:paddingLeft="@dimen/dp_30"
                android:textSize="@dimen/sp_17"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:hint="Email Id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_50"
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <LinearLayout
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_PhoneNumber"
                android:paddingLeft="@dimen/dp_30"
                android:textSize="@dimen/sp_17"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:hint="Phone Number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_50"
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    </LinearLayout>
</LinearLayout>